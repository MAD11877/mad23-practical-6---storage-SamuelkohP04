<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/mytoolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonGroup1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:text="@string/btnGroup1" />

    <Button
        android:id="@+id/buttonGroup2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@id/buttonGroup1"
        android:layout_marginTop="7dp"
        android:text="@string/btnGroup2" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_below="@id/buttonGroup2"
        android:layout_marginTop="16dp"></FrameLayout>

</RelativeLayout>